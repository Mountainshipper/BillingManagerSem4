<?xml version="1.0" encoding="utf-8"?>
  <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context="login.Help">


  <com.google.android.material.button.MaterialButton
      android:id="@+id/HelpSetup"
      style="@style/Widget.MaterialComponents.Button.OutlinedButton"
      android:layout_width="157dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="16dp"
      android:layout_marginBottom="172dp"
      android:text="Help with creating an account"
      android:textColor="@color/white"
      app:cornerRadius="15dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.539"
      app:layout_constraintStart_toStartOf="parent"
      app:strokeColor="@color/white"
      app:strokeWidth="2dp" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/HelpAdvanced"
      style="@style/Widget.MaterialComponents.Button.OutlinedButton"
      android:layout_width="157dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="16dp"
      android:layout_marginBottom="92dp"
      android:text="Help with advanced features"
      android:textColor="@color/white"
      app:cornerRadius="15dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.539"
      app:layout_constraintStart_toStartOf="parent"
      app:strokeColor="@color/white"
      app:strokeWidth="2dp" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/HelpLogin"
      style="@style/Widget.MaterialComponents.Button.OutlinedButton"
      android:layout_width="157dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="16dp"
      android:layout_marginBottom="256dp"
      android:text="Help with Login"
      android:textColor="@color/white"
      app:cornerRadius="15dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.543"
      app:layout_constraintStart_toStartOf="parent"
      app:strokeColor="@color/white"
      app:strokeWidth="2dp" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="376dp"
      android:layout_height="258dp"
      android:layout_marginTop="84dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.457"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/heart" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="352dp"
      android:layout_height="124dp"
      android:layout_marginTop="36dp"
      android:text="The developers wish you a "
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.491"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="174dp"
      android:layout_height="83dp"
      android:layout_marginTop="300dp"
      android:text="Day"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="48sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>